        <script>
            let selected = [];
            var seats;
            
            function seatcolor(id){
                
                let element = document.getElementById(id);
                if(element.style.color == "grey"){
                    element.style.color = "green"
                }else{
                    element.style.color = "grey"
                }

                if(element.style.color == "grey"){
                    
                    var myid = element.id;
                    selected.push(myid) ;
                    console.log(selected);
                    console.log(selected.length)
                }else{
                index = selected.indexOf(element.id);
                console.log(index)
                selected.splice(index);
                console.log(selected)
                 }
                let elementid = element.id;
                let constantID = elementid.substr(0, 25);
                let id_fare = constantID.concat('fare');
                let id_seat = constantID.concat('seats')
                let id_total = constantID.concat('total')
                let id_total_database = constantID.concat('total_database');
                let id_total_seats = constantID.concat('seats_database');

                seats = selected.length;
                document.getElementById(id_seat).innerHTML = seats;

                var fare = document.getElementById(id_fare).innerText;
                console.log(fare)
                let total = Number(seats)* Number(fare);
                document.getElementById(id_total).innerHTML = total;

                var total_database = document.getElementById(id_total_database);
                total_database.value = total;
                console.log(total_database);

                var total_seats = document.getElementById(id_total_seats);
                var string_selected = selected.toString();
